<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/titularesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imagenTitular"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="70"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/titularNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Titular "
            android:textSize="25sp"
            android:fontFamily="@font/archivo_black"
            android:textColor="#002541"/>

        <TextView
            android:id="@+id/titularQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quote"
            android:layout_marginLeft="12dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Hobbies"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/archivo_black"/>

        <TextView
            android:layout_below="@+id/tituloCurso"
            android:id="@+id/titularCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

</ScrollView>