<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/galeriaFragment"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imagenCurso"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="70"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tituloCurso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Canada"
                android:textSize="25sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/descripcionCurso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="descipcion"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fechas"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/cursosH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fecha"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horarios"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/horariosC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fecha"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$$$"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titular"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/titular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITULAR"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUGAR"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="245dp"
                android:background="#002541"
                android:text="Agregar"
                android:textColor="#fff"
                android:onClick="verMisCursos"
                />

        </LinearLayout>





</ScrollView>