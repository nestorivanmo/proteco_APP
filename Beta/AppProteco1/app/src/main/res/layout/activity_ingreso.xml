<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context=".Ingreso">

    <TextView
        android:id="@+id/registroEditTextTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/archivo_black"
        android:text="PROTECO"
        android:textColor="#F2CF46"
        android:textSize="100px"
        android:layout_gravity="center_horizontal"
        />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/barra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="30dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="100dp" />

        <!-- Email Label -->
        <EditText
            android:id="@+id/ingresoEditTextEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/ingresoEditTextContrasena"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <!-- Password Label -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/ingresoBtnLogin"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="50dp"
            android:background="#002541"
            android:text="Login"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/ingresoTextViewNoAccount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="¿Aún no tienes una cuenta? Crea una"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/ingresoTextForgetPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="¿Olvidaste tu contraseña?"
            android:textSize="16dip" />

    </LinearLayout>


</FrameLayout>